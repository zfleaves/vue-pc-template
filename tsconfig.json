{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest",
      "vite/client",
      "vite-plugin-vue-component-preview/client",
      "unplugin-vue-macros/macros-global"
    ],
    "paths": {
      "@/*": ["src/*"],
      "api/*": ["src/api/*"],
      "assets/*": ["src/assets/*"],
      "stores/*": ["src/stores/*"],
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "pages/*": ["src/pages/*"],
    }
  },
  "vueCompilerOptions": {
    "plugins": ["@vue-macros/volar/define-models", "@vue-macros/volar/define-slots"]
  },
  "exclude": ["dist", "node_modules", "*.js", "bin"]
}
